@model List<ResultSubAboutDto>

<section class="w3l-bottom py-5">
    <div class="container py-md-4 py-3 text-center">
        <div class="row my-lg-4 mt-4">
            <div class="col-lg-9 col-md-10 ml-auto">
                <div class="bottom-info ml-auto">
                    <div class="header-section text-left">
                        @foreach (var item in Model)
                        {
                            <h3 class="hny-title two">@item.Title</h3>
                            <p class="mt-3 pr-lg-5" id="desc-@item.Id">
                                @item.Description.Substring(0, Math.Min(item.Description.Length, 30))...
                            </p>
                            <a href="javascript:void(0);" class="btn btn-style btn-secondary mt-5" onclick="showFullDescription('@item.Id', '@item.Description')">
                                Read More
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function showFullDescription(id, fullDescription) {
        document.getElementById('desc-' + id).innerText = fullDescription;
    }
</script>
